<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid AutoGenerateColumns="False" x:Name="People">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Имя" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Surname}" Header="Фамилия" Width="110"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Age}" Header="Возраст" Width="70"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel HorizontalAlignment="Center" Grid.Row="1" Orientation="Horizontal">
            <Button x:Name="btn_Update" Content="Update" Click="Btn_Update" Height="30" Width="80" Margin="10"/>
            <Button x:Name="btn_Delete" Content="Delete" Click="Btn_Delete" Height="30" Width="80" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
